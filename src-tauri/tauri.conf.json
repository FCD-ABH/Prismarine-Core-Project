{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Prismarine",
  "version": "0.1.0",
  "identifier": "com.prismarine.server-manager",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Minecraft Server Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/installer.ico"
      }
    }
  }
}